{
  "name": "server",
  "module": "src/index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "start": "bun run start:mysql && bun run src/index.ts",
    "dev": "bun run start:mysql &&  bun run --watch src/index.ts",
    "start:mysql": "./scripts/start-mysql.sh",
    "stop:mysql": "docker stop reviews-mysql && docker rm reviews-mysql",
    "view:data": "bunx prisma studio",
    "migrate:dev": "bunx prisma migrate dev",
    "generate": "bunx prisma generate",
    "db:seed": "bun run prisma/seed.ts",
    "db:reset": "bunx prisma migrate reset --force"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/express": "^5.0.6"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@huggingface/inference": "^4.13.5",
    "@openai/agents": "^0.3.7",
    "@prisma/adapter-mariadb": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "dayjs": "^1.11.19",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "openai": "^6.15.0",
    "prisma": "^7.2.0",
    "winston": "^3.19.0",
    "zod": "^4.2.1"
  }
}
